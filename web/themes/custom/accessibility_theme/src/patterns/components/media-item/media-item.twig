{{ attach_library('accessibility_theme/media-item') }}

<div class="media-item {{ modifier }} {{- attributes ? attributes.class -}}"
  {{- attributes ? attributes|without(class) -}}>

  {% if video %}
    <div class="media-item__responsive-video">
      {{ video }}
    </div>
  {% else %}
    <div class="media-item__image">
      {{ image }}
    </div>
  {% endif %}
  {# Captions are optional. #}
  {% if caption %}
    <div class="media-item__caption">
      {{ caption }}
    </div>
  {% endif %}
</div>
