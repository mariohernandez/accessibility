{{ attach_library('accessibility_theme/social-icons') }}

{% import _self as menus %}
{{ menus.menu_links(items) }}

{% macro menu_links(items) %}
  {% import _self as menus %}
  {% if items %}
    {% import "@accessibility_theme/icons/_icons-macro.twig" as icons %}
    <ul class="social-icons__list">
      {% for item in items %}
        <li class="social-icons__item">
          <a class="social-icons__link" href="{{ item.url }}">
            {{ icons.get(item.title|lower) }}
            <span class="visually-hidden">
              {{ item.title }}
            </span>
          </a>
        </li>
      {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
