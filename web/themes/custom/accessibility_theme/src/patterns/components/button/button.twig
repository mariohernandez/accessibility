{{ attach_library('accessibility_theme/button') }}

{# Presence of a url in the passed button object determines type of  #}
{% if url %}
  <a href="{{ url }}" class="button{{ modifier ? ' ' ~ modifier }}">
    {{ text }}
  </a>
{% else %}
  <button class="button{{ modifier ? ' ' ~ modifier }}{{ modifier == 'is-disabled' ? ' disabled' }}">
    {{ text }}
  </button>
{% endif %}
