<div class="accordion__item">
  <h3 class="accordion__item--question"></h3>
    <button
      type="button"
      class="accordion__toggle"
      aria-controls="accordion__content-{{ item.accordion_instance }}"
      aria-expanded="false" id="accordion__toggle-{{ item.accordion_instance }}"
      aria-selected="false">
      <span class="accordion__heading">{{ item.title }}</span>
    </button>
  </h3>
  <div class="accordion__content"
    id="accordion__content-{{ item.accordion_instance }}"
    aria-hidden="true"
    aria-labelledby="accordion__content-{{ item.accordion_instance }}">
    {% block accordion_content %}
      {{ item.body }}
    {% endblock %}
  </div>
</div>
